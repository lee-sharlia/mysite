<%= form_for @post, html: { multipart: true } do |f| %>
    <% if @post.errors.any? %>
        <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving: </h2>
        <ul>
            <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    <% end %>
<div class="post-form">
    <%= f.label :title %><br>
    <%= f.text_field :title %>

    <br> 
    <br>

    <%= f.label :content, "Post portfolio item here" %><br>
    <%= f.text_area :content %>

    <br>
    <br>
    
    
    <%= f.submit %>

<% end %>
</div>